model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String @unique
  password    String
  role        Role @default(USER)
  createdAt   DateTime @default(now())
}

enum Role {
  USER
  AGENT
}


model Hall {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  agentId     String   @db.ObjectId
  name        String
  location    String
  price       Int
  description String?
  capacity    Int
  images      String[]
  amenities   String[]
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



model Booking {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  hallId      String @db.ObjectId
  userId      String @db.ObjectId

  name        String 
  email       String
  phone       String

  date        DateTime
  duration    Int
  status      String @default("pending")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Review {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  userId      String @db.ObjectId
  hallId      String @db.ObjectId

  review      String
  rating      Int
}